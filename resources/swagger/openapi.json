{
    "openapi": "3.0.0",
    "info": {
      "title": "Mi API con Laravel",
      "description": "Esta es la documentaci√≥n de mi API desarrollada con Laravel.",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:8000/api",
        "description": "Servidor local de desarrollo"
      }
    ],
    "paths": {
      "/incidents": {
        "get": {
          "summary": "Get all the incidents by aparments",
          "description": "Returns a list of all incidents grouped by apartment with its tasks",
          "responses": {
            "200": {
              "description": "List of incidents grouped by apartment, with associated tasks",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "owner": { "type": "string" },
                        "address": { "type": "string" },
                        "name": { "type": "string" },
                        "created_at": { "type": "string", "format": "date_time" },
                        "updated_at": { "type": "string", "format": "date_time" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  